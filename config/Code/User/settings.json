{
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.wordWrap": "on",
    "editor.foldingHighlight": false,
    "editor.roundedSelection": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.fontFamily": "HackGen, Consolas, 'Courier New', monospace",
    "editor.bracketPairColorization.enabled": true,
    "editor.formatOnSave": true,
    "editor.cursorBlinking": "phase",
    "editor.minimap.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.largeFileOptimizations": false,
    "editor.renderLineHighlight": "gutter",
    "editor.renderWhitespace": "boundary",
    "editor.fontSize": 17,
    "editor.stickyScroll.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "on"
    },
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "extensions.ignoreRecommendations": false,
    "material-icon-theme.saturation": 0.2,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.scrollback": 10000,
    "window.density.editorTabHeight": "compact",
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.badges": true,
    "workbench.tree.indent": 16,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.layoutControl.enabled": false,
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "statusBarItem.remoteBackground": "#386b80",
        "statusBarItem.remoteForeground": "#ddd",
        "statusBar.foreground": "#ddd",
        "activityBarBadge.foreground": "#3e778d",
        "activityBarBadge.background": "#ddd",
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
    },
    "black-formatter.args": [
        "--line-length",
        "100"
    ],
    "[vue]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "breadcrumbs.showArrays": true,
        "editor.tabSize": 2
    },
    "[go]": {
        "editor.formatOnPaste": true
    },
    "go.useLanguageServer": true,
    "security.workspace.trust.untrustedFiles": "open",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
    },
    "github.copilot.chat.localeOverride": "en",
}
